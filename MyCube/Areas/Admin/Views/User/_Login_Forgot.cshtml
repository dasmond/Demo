<div class="tab-pane fade" id="Forgot">
    <!-- Logo-->
    <div class="row text-center">
        <i class="glyphicon glyphicon-cloud login-logo center-block"></i>
    </div>
    <!-- 登录-->
    @using (Html.BeginForm("ForgetPassword", "User", new { r = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "cube-login" }))
    {
        @Html.ValidationSummary()
        <span class="heading text-primary">取回密码</span>
        <div class="form-group">
            <input type="email" class="form-control" id="email" name="email" placeholder="输入你的邮箱地址">
            <i class="glyphicon glyphicon-user"></i>
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-default text-center">发送</button>
        </div>

    }
        <div class="toolbar clearfix text-center">
            <div class="row" style="padding-top:30px;">
                <div class="toolbar center">
                    <a href="#Login" data-toggle="tab">
                        回到登录
                        <i class="ace-icon fa fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
</div>